# TPC Portal Environment Configuration
# Copy this file to .env.local and update the values

# Backend API Configuration
VITE_API_BASE_URL=http://localhost:3001/api

# Supabase Configuration (shared with main CampusConnect app)
VITE_SUPABASE_URL=your_supabase_project_url
VITE_SUPABASE_ANON_KEY=your_supabase_anon_key

# TPC Portal Specific Configuration
VITE_APP_NAME="TPC Portal"
VITE_APP_DESCRIPTION="Training and Placement Cell Portal"

# Feature Flags
VITE_ENABLE_BATCH_EXPORT=true
VITE_ENABLE_RESUME_PREVIEW=true
VITE_MAX_BATCH_SIZE=500

# Development Configuration
VITE_DEBUG_MODE=false
VITE_LOG_LEVEL=info

# File Upload Configuration
VITE_MAX_FILE_SIZE=10485760  # 10MB in bytes
VITE_ALLOWED_FILE_TYPES=pdf,doc,docx

# Export Configuration
VITE_DEFAULT_EXPORT_FORMAT=pdf
VITE_DEFAULT_RESUME_TEMPLATE=standard
VITE_EXPORT_TIMEOUT=300000  # 5 minutes in milliseconds